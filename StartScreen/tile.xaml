<UserControl x:Class="StartScreen.Tile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StartScreen"
             mc:Ignorable="d" 
             d:DesignHeight="145" d:DesignWidth="145">
    <Grid MouseDown="tile_Click" HorizontalAlignment="Left" Height="125" VerticalAlignment="Top" Width="125" Background="#FFD62020" Margin="12,12,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label x:Name="label" Content="Tile" HorizontalAlignment="Left" Margin="6,92,0,0" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="48" Margin="10,10,0,0" VerticalAlignment="Top" Width="48" Source="/testicon.png" RenderTransformOrigin="0.929,0.776" Grid.RowSpan="2"/>
    </Grid>
</UserControl>
